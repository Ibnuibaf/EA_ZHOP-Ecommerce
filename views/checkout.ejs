    <div class="container-fluid tab-name">
        <h3 class="p-3 ">Check Out&GreaterGreater;</h3>
    </div>
    <div class="row m-5">
        <div class="col-md-8 d-flex row justify-content-center">
            <div class="exist-address-box  bg-secondary text-light rounded p-4 mb-5"
                style="height: fit-content;width: fit-content ;">
                <p class="fs-5 text-center my-2 text-decoration-underline">Your Addresses</p>
                <div class="each-address d-flex  text-truncate my-2 ">
                    <button class="btn btn-dark">Select</button>
                    <p class="px-2">Kilari Road, Avenue Road,Bangalore,Karnataka,08022381347,560053,India</p>
                </div>
                <div class="each-address d-flex  text-truncate my-2">
                    <button class="btn btn-dark">Select</button>
                    <p class="px-2">Kilari Road, Avenue Road,Bangalore,Karnataka,08022381347,560053,India</p>
                </div>
                <div class="each-address d-flex  text-truncate my-2">
                    <button class="btn btn-dark">Select</button>
                    <p class="px-2">Kilari Road, Avenue Road,Bangalore,Karnataka,08022381347,560053,India</p>
                </div>
                <div class="each-address d-flex  text-truncate my-2 ">
                    <button class="btn btn-dark">Select</button>
                    <p class="px-2">Kilari Road, Avenue Road,Bangalore,Karnataka,08022381347,560053,India</p>
                </div>


            </div>
            <div class="address-tab col-md-8 border rounded p-2 shadow-lg">

                <form action="/user/profile-update" method="post">

                    <div class="local_address col mx-2">
                        <label for="local_address" class="form-label">Address</label><br>
                        <textarea id="local_address" class="form-input" name="local_address" rows="4"
                            style="resize: none;"></textarea>
                    </div>

                    <div class="my-3 d-flex">
                        <div class="Country col mx-2">
                            <label for="Country" class="form-label">Country</label>
                            <input type="text" class="form-input" id="Country" name="Country">
                        </div>
                        <div class="city col mx-2">
                            <label for="city" class="form-label">Town/City</label>
                            <input type="text" class="form-input" id="city" name="city">
                        </div>

                    </div>
                    <div class="my-3 d-flex">
                        <div class="District col mx-2">
                            <label for="District" class="form-label">District</label>
                            <input type="text" class="form-input" id="District" name="District">
                        </div>
                        <div class="State col mx-2">
                            <label for="State" class="form-label">State</label>
                            <input type="text" class="form-input" id="State" name="State">
                        </div>

                    </div>
                    <div class="my-3 d-flex ">
                        <div class="postcode col mx-2">
                            <label for="postcode" class="form-label">Postcode/ZIP</label>
                            <input type="text" class="form-input" id="postcode" name="postcode">
                        </div>
                        <div class="altr_number col mx-2">
                            <label for="altr_number" class="form-label">Alternative Number</label>
                            <input type="text" class="form-input" id="altr_number" name="altr_number">
                        </div>

                    </div>

                </form>
            </div>
        </div>
        <div class="col-md-4">
            <div class="checkout-proceed px-5 py-3" style="background-color: #F3F2EE;">
                <p class="fs-5 fw-bold text-center border-bottom border-3">Proceed CheckOut</p>
                <div class="products-tab  border-bottom border-3 " style="height: 170px;overflow: auto;">
                    <ol class="fs-6">
                        <li class="d-flex justify-content-between fw-medium" style="position: sticky;top: 0;background-color: #F3F2EE;"><label for="">Products</label><i>Total</i></li>
                        <li class="d-flex justify-content-between"><label for="">product 1</label><i>₹754</i></li>
                        <li class="d-flex justify-content-between"><label for="">product 2</label><i>₹754</i></li>
                        <li class="d-flex justify-content-between"><label for="">product 3</label><i>₹754</i></li>
                        <li class="d-flex justify-content-between"><label for="">product 4</label><i>₹754</i></li>
                        <li class="d-flex justify-content-between"><label for="">product 5</label><i>₹754</i></li>
                    </ol>
                </div>
                <div class="add-coupen my-4 bg-secondary d-flex align-items-center justify-content-between px-2">
                    <input type="text" name="coupen" id="coupen" class="bg-transparent border-0 px-3 py-2 " placeholder="Add Coupen" style="outline: none;color: #F3F2EE;">
                    <button class="bg-transparent border-0  fs-5 text-light">+  verify</button>
                </div>
                <div class="wallet-option d-flex justify-content-between align-items-center fs-5 border-bottom border-3">
                    <div class="laabels d-flex justify-content-between align-items-center ">
                        <input type="checkbox" name="wallet_balance" id="wallet_balance" style="height: 20px;width: 20px;" >
                        <label for="wallet-option">Use Wallet Balance:</label>
                    </div>
                    <i >₹87/-</i>
                </div>
                <div class="checkout-details">
                    <div class="grand-total d-flex justify-content-between">
                        <label>Grand Total:</label>
                        <i><s>₹798</s></i>
                    </div>
                    <div class="saved d-flex justify-content-between">
                        <label>Saved </label>
                        <p>₹79</p>
                    </div>
                    <div class="rate d-flex justify-content-between align-items-center">
                        <label>Amount to be Paid:</label>
                        <p class="text-danger fw-bold fs-5">₹450</p>
                    </div>
                </div>
                <div class="pay-methods border border-3 p-3 rounded ">
                    <p class="fs-5">Payment Methods</p>
                    <div class="cod d-flex align-items-center">
                        <input type="radio" name="pay-methods" id="cod" style="height: 20px;width: 20px; margin-inline: 5px;">
                        <label for="COD">Cash on Delivery</label>
                    </div>
                    <div class="razor d-flex align-items-center">
                        <input type="radio" name="pay-methods" id="razorpay" style="height: 20px;width: 20px; margin-inline: 5px;">
                        <label for="razorpay">Razor Pay</label>
                    </div>
                </div>
                <div class="text-center ">
                    <button class=" btn btn-dark px-5 my-3 rounded-0 fs-5">Confirm Order</button>
                </div>
            </div>
            <div class="razor-secure text-center mt-3">
                <img src="/images/razerpay.png" alt="" height="30"><br>
                <i>Guaranteed Safe Checkout</i>
            </div>
        </div>
    </div>

    <%- include('partials/userFooter.ejs') %>